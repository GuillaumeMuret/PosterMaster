<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/dialog_text_margin"
    android:gravity="start"
    >

    <TextView
        android:id="@+id/tvMyNoteFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_set_name_session_et_text_size"
        android:textColor="@color/colorWhite"
        android:text="bonjour"
        />

    <LinearLayout
        android:id="@+id/llSizeKeyActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.125"
            android:rating="3.5"
            />

        <TextView
            android:id="@+id/tvRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:text="Size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        >

        <TextView
            android:id="@+id/bpCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_set_name_session_et_text_size"
            android:textColor="@color/colorWhite"
            android:text="@string/dialog_cancel"
            android:padding="15dp"
            android:background="@drawable/selector_background_category_title"
            />

        <TextView
            android:id="@+id/bpOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_set_name_session_et_text_size"
            android:textColor="@color/colorWhite"
            android:text="@string/dialog_ok"
            android:padding="15dp"
            android:background="@drawable/selector_background_category_title"
            />


    </LinearLayout>

</LinearLayout>